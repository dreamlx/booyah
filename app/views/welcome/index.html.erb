<%= image_tag 'family_beach_run.jpg', :class => 'family_beach_run_img' %>
<div class="row">
  <div class="home-tagline-container">
    <div class="row">
      <div class="small-12 columns">
        <h1 class="tagline">Pictures from your phone, delivered to your home.</h1>
        <h3 class="sub-tagline">Getting photos from your phone printed is as easy as sending a text message</h3>
      </div>
    </div>
  </div>
</div>
<div class="home-page-block-2">
  <div class="row">
    <div class="large-7 columns">
      <div class="row">
        <%= render :partial => 'shared/three_steps_small' %>
      </div>
      <div class="row picture-description-shell">
        <div class="picture-desc-separator"></div>
        <div class="small-6 columns">
          <p class="desc-left">$1.50 <span>per print</span></p>
        </div>
        <div class="small-6 columns">
          <p class="desc-right">4" X 6" glossy print</p>
        </div>
      </div>
    </div>
    <div class="large-5 columns">
      <div class="row">
        <div class="large-12 columns">
          <%= form_for @user, :url => users_path, :html => {:class => 'home-page-new-user-signup'} do |user| %>
            <%= user.text_field 'email', :placeholder => 'Email' %>
            <%= user.text_field 'name', :placeholder => 'Name (ex: Jordan Nemrow)' %>
            <%= user.text_field 'cell', :placeholder => 'Cell Phone (ex: (555) 555-555)', :class => ('cell_formatted' unless Rails.env.test?)  %>
            <%= user.password_field 'password', :placeholder => 'Password' %>
            <div class="button-border"><%= user.submit 'Start Printing!' %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= render :partial => 'layouts/footer' %>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    Inputs.init();
  });
</script>


