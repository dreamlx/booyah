  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:image" content="http://www.booyahbooyah.com/assets/booyah_square_logo.jpg"/>
    <meta property="og:title" content="Get prints of your photos by sending them as a text message! Booyah!"/>
    <meta property="og:url" content="http://www.booyahbooyah.com"/>
    <meta property="og:site_name" content="Booyah!"/>
    <meta property="og:type" content="printing"/>

    <meta name="description" content="Get prints in the mail by sending them as a text message." />

    <title>Booyah! | Text To Print!</title>
    <link href='http://fonts.googleapis.com/css?family=Cabin:700|PT+Sans|Comfortaa:700' rel='stylesheet' type='text/css'>
  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= render :partial => 'layouts/google_analytics' %>
  </head>

  <body>
    <% if current_page?(root_path) %>
      <%= image_tag 'blurred_lines_bg.png', :class => 'blurred_lines_bg' %>
    <% end %>
    <div class="row main_row_container">
    <%= render :partial => 'layouts/header' %>
    <%= render :partial => 'layouts/notice_and_errors' %>
    <%= yield %>
    </div>
    
  </body>
</html>
